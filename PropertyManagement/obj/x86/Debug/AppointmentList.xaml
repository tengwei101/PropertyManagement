<Page
    x:Class="PropertyManagement.AppointmentList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PropertyManagement"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                Text="Appointments"
                FontWeight="Bold"
                FontSize="24"
                Margin="10,10,0,10" />

            <Button x:ConnectionId='13'
                x:Name="AddAppointmentButton"
                Grid.Column="1"
                Content="Add Appointment"
                Margin="0,10,10,10"
                                                   />
        </Grid>

        <ListView x:ConnectionId='2' x:Name="AppointmentListView" Grid.Row="1" Margin="10">
            <ListView.ItemTemplate>
                <DataTemplate                               >
                    <Grid x:ConnectionId='4'>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,5">
                            <TextBlock x:ConnectionId='6'                       FontWeight="SemiBold" FontSize="18" />
                            <TextBlock x:ConnectionId='7'                             TextWrapping="Wrap" />
                            <TextBlock>
                                <Run x:ConnectionId='11'                           />
                                <Run Text=" at " />
                                <Run x:ConnectionId='12'                           />
                            </TextBlock>
                            <TextBlock>
                                <Run Text="Duration: " />
                                <Run x:ConnectionId='10'                          />
                            </TextBlock>
                            <TextBlock x:ConnectionId='8'                          />
                            <TextBlock>
                                <Run Text="Status: " />
                                <Run x:ConnectionId='9'                        FontWeight="SemiBold" />
                            </TextBlock>
                        </StackPanel>

                        <Button x:ConnectionId='5'
                            Grid.Column="1"
                            Content="Details"
                            Margin="10,0"
                            VerticalAlignment="Top"
                                                        />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>

